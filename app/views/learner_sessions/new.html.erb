<h1>New learner_session</h1>

<% form_for([@client, @session, @learner_session]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :learner %><br />
    <%= f.collection_select :learner_id, my_learners, :id, :friendly, {:prompt => true} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', client_session_learner_sessions_path(@client, @session) %>